<h2>Edit <%= @band.name %></h2>


<form action = "/bands/<%= @band.id() %>/name" method="post">         
  <input type="hidden" name="_method" value="patch">

  <label for="name" class="form-label"></label>
  <input id="name" name="name" type="text" placeholder="Edit Name">

  <button type="submit" class="btn-default">Edit Name</button>     
</form>



<form action = "/bands/<%= @band.id() %>/hometown" method="post">         
  <input type="hidden" name="_method" value="patch">

  <label for="hometown" class="form-label"></label>
  <input id="hometown" name="hometown" type="text" placeholder="Change Hometown">

  <button type="submit" class="btn-default">Change Hometown</button>     
</form>



<form action="/bands/<%=@band.id() %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button class="btn-sm btn-default" type="submit">Delete Band</button>
</form>